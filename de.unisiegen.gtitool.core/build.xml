<project name="de.unisiegen.gtitool.core" default="dist" basedir=".">

	<!-- description -->
	<description>
		Buildfile for the de.unisiegen.gtitool.core subproject.
    </description>

	<!-- property -->
	<property file="${basedir}/build.properties" />
	<property name="distdir" value="${basedir}/dist" />
	<property name="classesdir" value="${distdir}/classes" />
	<property name="libdir" value="${basedir}/lib" />
	<property name="docdir" value="${basedir}/doc" />
	<property name="sourcedir" value="${basedir}/source" />
	<property name="generateddir" value="${basedir}/source-generated" />

	<!-- taskdef -->
	<taskdef name="cup" classname="java_cup.anttask.CUPTask" classpath="${libdir}/java-cup-11a-gtitool.jar" />
	<taskdef name="jflex" classname="JFlex.anttask.JFlexTask" classpath="${libdir}/JFlex-1.4.1.jar" />

	<!-- dist -->
	<target name="dist" depends="dist-preclean,dist-compile,dist-jar,dist-3rdparty,dist-clean" description="Build distribution">
		<echo message="Distribution ready in ${distdir}" />
	</target>

	<!-- dist preclean -->
	<target name="dist-preclean">
		<delete dir="${distdir}" />
		<mkdir dir="${distdir}" />
	</target>

	<!-- dist compile -->
	<target name="dist-compile" depends="parser">
		<delete dir="${classesdir}" />
		<mkdir dir="${classesdir}" />
		<javac debug="on" destdir="${classesdir}" encoding="UTF-8" optimize="on" source="1.5" target="1.5">
			<src path="${basedir}/source" />
			<src path="${basedir}/source-impl" />
			<src path="${basedir}/source-generated" />
			<classpath>
				<pathelement location="${libdir}/log4j-1.2.14.jar" />
				<pathelement location="${libdir}/java-cup-11a-gtitool-runtime.jar" />
			</classpath>
		</javac>
	</target>

	<!-- dist jar -->
	<target name="dist-jar" depends="dist-compile">
		<!-- manifest -->
		<manifest file="${distdir}/MANIFEST.MF">
			<attribute name="Built-By" value="${user.name}" />
			<section name="de.unisiegen.gtitool.core">
				<attribute name="Specification-Title" value="GTITool Core" />
				<attribute name="Specification-Version" value="${de.unisiegen.gtitool.version}" />
				<attribute name="Specification-Vendor" value="University of Siegen, Department of Theoretical Computer Science" />
				<attribute name="Implementation-Title" value="de.unisiegen.gtitool.core" />
				<attribute name="Implementation-Version" value="${de.unisiegen.gtitool.version} ${TODAY}" />
				<attribute name="Implementation-Vendor" value="University of Siegen, Department of Theoretical Computer Science" />
			</section>
		</manifest>
		<!-- make dir meta-inf -->
		<mkdir dir="${classesdir}/META-INF" />
		<!-- copy license -->
		<copy todir="${classesdir}/META-INF" file="${docdir}/LICENSE" />
		<!-- jar file -->
		<jar jarfile="${distdir}/de.unisiegen.gtitool.core-${de.unisiegen.gtitool.version}.jar" manifest="${distdir}/MANIFEST.MF">
			<fileset dir="${classesdir}" />
			<fileset dir="${basedir}/source">
				<include name="**/*.properties"/>
			</fileset>
			<fileset dir="${basedir}/source-impl">
				<include name="**/*.properties"/>
			</fileset>
		</jar>
		<!-- jar file source-->
		<jar jarfile="${distdir}/de.unisiegen.gtitool.core-${de.unisiegen.gtitool.version}-src.jar" manifest="${distdir}/MANIFEST.MF">
			<fileset dir="${basedir}/source">
				<include name="**/*.java"/>
				<include name="**/*.properties"/>
			</fileset>
			<fileset dir="${basedir}/source-impl">
				<include name="**/*.java"/>
				<include name="**/*.properties"/>
			</fileset>
		</jar>
		<!-- delete manifest -->
		<delete file="${distdir}/MANIFEST.MF" />
	</target>

	<!-- dist 3rdparty -->
	<target name="dist-3rdparty" description="Copy 3rd party jar files">
		<copy file="${libdir}/java-cup-11a-gtitool-runtime.jar" todir="${distdir}" />
		<copy file="${libdir}/log4j-1.2.14.jar" todir="${distdir}" />
	</target>

	<!-- dist clean -->
	<target name="dist-clean">
		<delete dir="${classesdir}" />
	</target>

	<!-- parser -->
	<target name="parser" depends="parser-alphabet, parser-state, parser-symbol" description="Generate parsers and lexers" />

	<!-- parser clean -->
	<target name="parser-clean">
		<delete dir="${generateddir}/de/unisiegen/gtitool/core/parser" />
	</target>
			
	<!-- parser alphabet -->
	<target name="parser-alphabet" description="Generates lexer and parser for an alphabet">
		<jflex 
	   		file="${sourcedir}/de/unisiegen/gtitool/core/parser/alphabet/alphabet.flex"
	   		destdir="${generateddir}"
			nobak="yes" />
		<cup
			srcfile="${sourcedir}/de/unisiegen/gtitool/core/parser/alphabet/alphabet.cup"
			destdir="${generateddir}/de/unisiegen/gtitool/core/parser/alphabet"
			package="de.unisiegen.gtitool.core.parser.alphabet"
			parser="AlphabetAbstractParser"
			symbols="AlphabetTerminals"
			interface="yes"
			debug="no"
			expect="0"
			nonterms="no"
			nopositions="no"
			compact_red="no"
			dump_grammar="no" />
	</target>

	<!-- parser state -->
	<target name="parser-state" description="Generates lexer and parser for a state">
		<jflex 
	   		file="${sourcedir}/de/unisiegen/gtitool/core/parser/state/state.flex"
	   		destdir="${generateddir}"
			nobak="yes" />
		<cup
			srcfile="${sourcedir}/de/unisiegen/gtitool/core/parser/state/state.cup"
			destdir="${generateddir}/de/unisiegen/gtitool/core/parser/state"
			package="de.unisiegen.gtitool.core.parser.state"
			parser="StateAbstractParser"
			symbols="StateTerminals"
			interface="yes"
			debug="no"
			expect="0"
			nonterms="no"
			nopositions="no"
			compact_red="no"
			dump_grammar="no" />
	</target>
	
	<!-- parser symbol -->
	<target name="parser-symbol" description="Generates lexer and parser for a symbol">
		<jflex 
	   		file="${sourcedir}/de/unisiegen/gtitool/core/parser/symbol/symbol.flex"
	   		destdir="${generateddir}"
			nobak="yes" />
		<cup
			srcfile="${sourcedir}/de/unisiegen/gtitool/core/parser/symbol/symbol.cup"
			destdir="${generateddir}/de/unisiegen/gtitool/core/parser/symbol"
			package="de.unisiegen.gtitool.core.parser.symbol"
			parser="SymbolAbstractParser"
			symbols="SymbolTerminals"
			interface="yes"
			debug="no"
			expect="0"
			nonterms="no"
			nopositions="no"
			compact_red="no"
			dump_grammar="no" />
	</target>
	
</project>