<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/docs/api/org/apache/log4j/xml/log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <appender name="console" class="org.apache.log4j.ConsoleAppender"> 
    <param name="Target" value="System.out"/> 
    <layout class="org.apache.log4j.PatternLayout"> 
      <param name="ConversionPattern" value="[%C{1}.%M] %m%n"/> 
    </layout> 
  </appender> 

  <!-- de.unisiegen.gtitool.core -->

  <logger name="de.unisiegen.gtitool.core.Messages">
    <level value="all" />
    <appender-ref ref="console" />
  </logger>
  
  <!-- de.unisiegen.gtitool.ui -->

  <logger name="de.unisiegen.gtitool.ui.Start">
    <level value="all" />
    <appender-ref ref="console" />
  </logger>
  
  <!-- de.unisiegen.gtitool.ui.logic -->

  <logger name="de.unisiegen.gtitool.ui.logic.AboutDialog">
    <level value="all" />
    <appender-ref ref="console" />
  </logger>

  <logger name="de.unisiegen.gtitool.ui.logic.PreferencesDialog">
    <level value="all" />
    <appender-ref ref="console" />
  </logger>
  
  <!-- de.unisiegen.gtitool.ui.preferences -->

  <logger name="de.unisiegen.gtitool.ui.preferences.PreferenceManager">
    <level value="all" />
    <appender-ref ref="console" />
  </logger>

  <!-- de.unisiegen.gtitool.ui.utils -->

  <logger name="de.unisiegen.gtitool.ui.utils.Clipboard">
    <level value="all" />
    <appender-ref ref="console" />
  </logger>
  
  <!-- all -->

  <logger name="de.unisiegen.gtitool.ui.Messages">
    <level value="all" />
    <appender-ref ref="console" />
  </logger>
</log4j:configuration>