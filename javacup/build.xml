<project name="gtitool.javacup" default ="dist" basedir=".">
  
  <property name="etc"       location="etc"       />
  <property name="bin"       location="bin"       />
  <property name="lib"       location="lib"       />
  <property name="src"       location="source"    />
  <property name="java"      location="java"      />
  <property name="classes"   location="classes"   />
  <property name="dist"      location="dist"      />
  <property name="flex"      location="flex"      />
  <property name="cup"       location="cup"       />

  <target name="init" depends="clean">
    <tstamp />
    <mkdir dir="${src}" />
    <mkdir dir="${java}" />
    <mkdir dir="${classes}" />
    <mkdir dir="${dist}" />    
  </target>

  <property environment="env" />

  <path id="libraries">
     <pathelement location="${src}" />
     <fileset dir="${lib}">
	<include name="**/*.jar" />
     </fileset>
  </path>

  <path id="binaries">
     <fileset dir="${bin}">
	<include name="**/*.jar" />
     </fileset>
  </path>

  <target name="clean">
    <delete dir="${java}" />
    <delete dir="${classes}" />
    <delete dir="${dist}" />
  </target>

  <taskdef name="cup" classname="java_cup.anttask.CUPTask" classpath="${lib}/java-cup-11.jar" />
  <taskdef name="jflex" classname="JFlex.anttask.JFlexTask" classpath="${lib}/JFlex.jar" />

  <target name="cup" depends="init">
    <cup srcfile="${cup}/parser.cup" interface="on" destdir="${java}" parser="parser" symbols="sym" quiet="false" nonterms="true"/>
  </target>

  <target name="jflex" depends="cup">
    <jflex file="${flex}/Lexer.jflex" destdir="${java}" />
  </target>

  <target name="compile" depends="jflex">
    <copy todir="${java}"><fileset dir="${src}"></fileset></copy>
    <javac srcdir="${java}" destdir="${classes}" verbose="off" listfiles="off" debug="on" source="1.5" target="1.5">
      <classpath refid="libraries"/>
    </javac>
  </target>

  <target name="dist" depends="jar,update">
    <echo message="Distribution ready in ${distdir}" />
  </target>
	
  <target name="jar" depends="compile">
	<jar jarfile="${dist}/java-cup-11a-gtitool.jar" basedir="${classes}">
	  <manifest>
	    <attribute name="Main-Class" value="java_cup/Main" />
	    <attribute name="Class-Path" value="java-cup-11a-gtitool-runtime.jar" />
	  </manifest>
	</jar>
	<jar jarfile="${dist}/java-cup-11a-gtitool-runtime.jar" basedir="${classes}" includes="java_cup/runtime/*">
	</jar>
	<jar jarfile="${dist}/java-cup-11a-gtitool-src.jar">
	    <manifest>
	      <attribute name="Main-Class" value="java_cup/Main" />
	      <attribute name="Class-Path" value="java-cup-11a-gtitool-runtime.jar" />
	    </manifest>
	    <fileset dir="${basedir}/source">
		  <include name="**/*.java"/>
		</fileset>
	</jar>	
	<delete dir="${java}" />
	<delete dir="${classes}" />
  </target>

  <target name="update">
  	<copy file="${dist}/java-cup-11a-gtitool-runtime.jar" todir="${basedir}/../de.unisiegen.gtitool.core/lib" />
  	<copy file="${dist}/java-cup-11a-gtitool-src.jar" todir="${basedir}/../de.unisiegen.gtitool.core/lib" />
  	<copy file="${dist}/java-cup-11a-gtitool.jar" todir="${basedir}/../de.unisiegen.gtitool.core/lib" />
  </target>
</project>