<project name="gtitool.manual" default="dist" basedir=".">

	<!-- dist -->
	<target name="dist" description="Dist manual">
		<exec dir="${basedir}" os="Linux" executable="pdflatex">
			<arg value="manual.tex" />
		</exec>
		<exec dir="${basedir}" os="Linux" executable="makeindex">
			<arg value="manual.idx" />
			<arg value="-o" />
			<arg value="manual.ind" />
		</exec>
		<exec dir="${basedir}" os="Linux" executable="pdflatex">
			<arg value="manual.tex" />
		</exec>
		<delete>
			<fileset dir="${basedir}">
				<include name="*.toc" />
				<include name="*.aux" />
				<include name="*.out" />
				<include name="*.log" />
				<include name="*.dvi" />
				<include name="*.ps" />
			</fileset>
		</delete>
		<echo message="Dist manual finished" />
	</target>
</project>